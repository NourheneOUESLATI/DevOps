pipeline {
     agent any
   stages{
         stage('compile'){
           steps{
             bat """mvn compile"""
           }
         }
         stage('packaging'){
           steps{
             bat """mvn clean package"""
           }
         }
         stage('test'){
           steps{
             bat """mvn test"""
           }
         }         
         stage('Sonar'){
           steps{
             bat """mvn sonar:sonar"""
           }
         }
         stage('nexus'){
           steps{
             bat """mvn clean package deploy:deploy-file -Dmaven.test.skip=true -DgroupId=tn.esprit.spring -DartifactId=DevOps--5SE4 -Dversion=1.0.1 -DgeneratePom=true -Dpackaging=jar -DrepositoryId=deploymentRepo -Durl=http://localhost:8081/repository/maven-releases/ -Dfile=target/DevOps--5SE4-1.0.1.jar"""
           }
         }
       }
     post {
       success {
         emailext body: 'build success', subject: 'jenkins', to: 'nourhene.oueslati@esprit.tn'
       }
       failure {
         emailext body: 'failure', subject: 'jenkins', to: 'nourhene.oueslati@esprit.tn'
       }
     }
 }
         
         